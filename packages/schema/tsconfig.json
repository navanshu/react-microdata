{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": false,
    "declarationMap": false,
    "incremental": false,
    "skipLibCheck": true,
    "module": "NodeNext",
    "types": ["react", "node"],
    "strict": true,
    "target": "es2015",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
