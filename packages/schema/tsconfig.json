{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "module": "ES6",
    "types": ["react", "node"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "es2020",
      "moduleResolution": "Node"
    },
    "esm": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
